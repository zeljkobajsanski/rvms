@{
    ViewBag.Title = "Kreiraj liniju";
    Layout = "~/Views/Shared/_MapLayout.cshtml";
}

@section styles
{
    <style>
        #map {
            width: 100%;
            height: 100%;
        }
    </style>
}
<div id="map"></div>

<script>
    var map,
        mapOptions = {
            center: new google.maps.LatLng(44.22, 20.74),
            zoom: 7,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        },
        poly,
        markers = [],
        bounds;
    
    map = new google.maps.Map(document.getElementById("map"), mapOptions);
    poly = new google.maps.Polyline({
        strokeColor: '#FF0000',
        strokeOpacity: 0.75,
        strokeWeight: 3
    });
    poly.setMap(map);
    
    function dodajMarker(id, lat, lng) {
        if (lat && lng) {
            var coord = new google.maps.LatLng(lat, lng);
            var marker = new google.maps.Marker({
                map: map,
                position: coord,
                id: id,
                icon: '@Url.Content("~/Content/images/bus_black_24x24.png")'
            });
            poly.getPath().push(coord);
            markers.push(marker);
            if (!bounds) {
                bounds = new google.maps.LatLngBounds(coord, coord);
            } else {
                bounds.extend(coord);
            }
            map.fitBounds(bounds);
        }
    }
    
    function obrisiMarker(id) {
        $.each(markers, function(ix, marker) {
            if (marker.id == id) {
                marker.setMap(null);
            }
        });
        var path = poly.getPath();
        var last = path.length;
        path.removeAt(last - 1);
    }
</script>
